        <TextView android:text="2016/07/12 11:17" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:id="@+id/latestMday"/>
        <TextView android:text="(mg/dL)" android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18dp"
            android:gravity="end"/>
    </LinearLayout>
